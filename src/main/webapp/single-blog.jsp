            <div class="single-related-blog-post">
                <img src="<%=blog.getImg_url()%>" alt="">
                <a href="<%=link%>">
                    <h5><%=blog.getName()%>
                    </h5>
                </a>
            </div>
            <%}%>
        </div>

    </div>
